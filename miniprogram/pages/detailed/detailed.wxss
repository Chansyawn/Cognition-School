.main {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 30rpx 100rpx;
  margin: 20rpx 20rpx 160rpx;
  border: solid 20rpx #3d3d63;
  border-radius: 50rpx;
  box-shadow: 0 10rpx 20rpx 10rpx #aaaaaa;
  line-height: 50rpx;

}


.ability-title{
  margin:30rpx 0 20rpx;
  font-size:36rpx;
  font-weight: 800;
}

.space{
  text-indent:2em
}
.report-title {
 
  margin: 40rpx 0;
  font-size: 24px;
  font-weight: bold;
}

.header-information {
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: row;
}

.user-information-container {
  width: 50%;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.user-information {
  position: relative;
  z-index: 0;
  width: 100%;
  font-size: 16px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.user-information:after {
  content: '';
  position: absolute;
  z-index: -1;
  left: 0;
  right: 0;
  bottom: -5rpx;
  height: 0;
  border: 10px solid #eeeeee;
  border-radius: 10px;
}

.settlement_illus {
  width: 40%;
}

.data-chart {
  flex: 1;
  width: 100%;
}

.finish-date {
  align-self: flex-end;
  padding: 20rpx 40rpx;
  font-size: 14px;
  text-align: right;
}

