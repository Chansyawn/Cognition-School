.main {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  margin: 40rpx 40rpx 160rpx;
  border: solid 20rpx #3d3d63;
  border-radius: 50rpx;
  box-shadow: 0 10rpx 20rpx 10rpx #aaaaaa;
}

.report-title{
  margin: 20rpx 0;
  font-size: 24px;
  font-weight: bold;
}

.header-information {
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: row;
}

.user-information-container{
  flex: 1;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.user-information{
  font-size: 20px;
  position: relative;
  z-index:0;
}

.user-information:after{
  content: '';
  position: absolute;
  z-index: -1;
  left: 0;
  right: 0;
  bottom: -5rpx;
  height: 0;
  border: 10px solid #eeeeee;
  border-radius : 10px;
}

.score-image{
  width: 50%;
}

.data-chart{
  flex: 1;
  width: 100%;
}

.finish-date{
  width: 100%;
  padding: 40rpx;
  font-size: 14px;
  text-align: right;
}