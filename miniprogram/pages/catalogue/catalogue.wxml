<van-dialog id="van-dialog"/>
<van-toast id="van-toast"/>
<view class="page">
  <van-nav-bar title="{{countdownDisplay}}"/>
  <view class="main">
    <view class="examination-container">
      <view class="mask" hidden="{{examinationSwitchLock}}"></view>
      <swiper
              class="examination-swiper"
              previous-margin="80rpx"
              next-margin="80rpx"
              current="{{currentExamination}}"
              bindtransition="changeExaminationSwiper"
              bindanimationfinish="examinationSwiperChanged"
      >
        <block wx:for="{{examinations}}" wx:key="id">
          <swiper-item class="examination-swiper-items">
            <view
                    class="examination-items-content"
                    style="{{item.style}} {{item.backgroundStyle}}"
                    data-swiper-id="{{index}}"
                    bind:tap="tapExamination"
            >
              <image class="examination-swiper-items-image" src="cloud://cognition-school-3f9w80x22b0d491.636f-cognition-school-3f9w80x22b0d491-1304404556/assets/images/{{item.image}}"
                     mode="aspectFill"></image>
              <view class="examination-swiper-items-title">{{item.name}}</view>
              <view class="examination-swiper-items-tag">{{item.tag}}</view>
              <view style="flex: 1"></view>
              <view>评分</view>
              <view class="examination-swiper-items-score">{{item.score}}</view>
            </view>
          </swiper-item>
        </block>
      </swiper>
      <view class="swiper-dots-container">
        <block wx:for="{{examinations}}" wx:key="id">
          <view class="swiper-dots{{index===currentDotsIdx ? ' swiper-dots-selected':''}}"></view>
        </block>
      </view>
    </view>
    <van-button class="finishExamination" custom-style="border-radius: 20rpx;" bind:click="finishExamination">
      退出测试
    </van-button>
  </view>
</view>
