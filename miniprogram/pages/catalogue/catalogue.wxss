/* pages/index/index.wxss */
.page {
  height: 100vh;
  box-sizing: border-box;
}

.page > van-image {
  position: fixed;
  height: 100%;
  width: 100%;
  z-index: -10;
}

.custom-nav-bar{
  background-color: transparent !important;
}

.main {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.examination-container {
  width: 100%;
}

.mask {
  width: 100%;
  height: 1000rpx;
  position: fixed;
  background-color: #999;
  z-index: 9999;
  opacity: 0;
}

.examination-swiper {
  width: 100%;
  height: 950rpx;
}

.examination-swiper-items {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.examination-items-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  height: 900rpx;
  margin: 10rpx;
  padding: 80rpx;
  overflow: hidden;
  border-radius: 48rpx;
  box-sizing: border-box;
  background-color: #1e2b34;
}

.examination-items-image{
  width: 100%;
  height: 500rpx;
  background-color: transparent;
}

.examination-items-background{
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.examination-items-name{
  color: #cccccc;
  font-size: 72rpx;
  font-weight: 700;
}

.examination-items-score-label{
  color: #cccccc;
}

.examination-items-score{
  color: #cccccc;
  font-size: 72rpx;
}

.swiper-dots-container {
  height: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.swiper-dots {
  width: 20rpx;
  height: 20rpx;
  margin: 0 10rpx;
  border-radius: 20rpx;
  background-color: #ffffff;
  opacity: 0.2;
  transition: all 0.6s;
}

.swiper-dots-selected {
  opacity: 0.8;
  width: 30rpx;
}

.finishExamination {
  margin: 40rpx 0;
}