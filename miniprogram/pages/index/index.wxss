/* pages/index/index.wxss */
.custom-nav-bar {
  background-color: aquamarine;
}

.main {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 120rpx;
}

.logo {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  height: 560rpx;
  width: 560rpx;
  margin-top: 160rpx;
  margin-bottom: auto;
  font-size: 96rpx;
  font-weight: bold;
  letter-spacing: 8rpx;
  font-family: 幼圆, sans-serif;
}

.logo > image{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.index-button-container {
  width: 100%;
  display: flex;
  margin-bottom: 120px;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.index-button {
  height: 128rpx;
  width: 56% !important;
  margin: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 48rpx;
  font-weight: normal;
  border-radius: 48rpx;
}

.index-button-help {
  background: transparent;
  border: dashed 10rpx #0075a9;
}

.index-button-start{
  background-color: #eeeeee;
}

.index-button-start:active{
  background-color: #aaaaaa;
}

.index-button-icon {
  margin-right: 24rpx;
}