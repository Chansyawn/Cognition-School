/* pages/mine/mine.wxss */
.main {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 120rpx;
}

.header {
  position: relative;
  top: 0;
  z-index: -1;
  width: 100%;
  height: 360rpx;
  background-color: #8ca8ca;
}

.card {
  box-sizing: border-box;
  width: 85%;
  margin: 20rpx 0;
  padding: 40rpx;
  background-color: white;
  box-shadow: 0 4rpx 10rpx #aaaaaa;
  border-radius: 32rpx;
}

.card-title {
  font-size: 16px;
  font-weight: 700;
}

.account-info {
  margin-top: -260rpx;
  width: 85%;
}

.account-title {
  display: block;
  height: 100rpx;
  padding: 20rpx;
  font-size: 22px;
  color: white;
}

.account-content {
  display: flex;
  align-items: center;
  height: 160rpx;
  margin: 20rpx 0;
  padding: 20rpx 40rpx ;
  border-radius: 32rpx;
  background-color: white;
  box-shadow: 0 4rpx 10rpx #aaaaaa;
}

.account-avatar {
  display: block !important;
}

.account-description {
  height: 120rpx;
  margin: 0 0 0 40rpx;
  flex: 1;
  display: flex;
  overflow: hidden;
  flex-direction: column;
  justify-content: space-around;
}

.account-id {
  display: block;
}

.account-tags {
  color: #666666;
  display: block;
  white-space: nowrap;
  font-size: 14px;
}

.data-chart {
  height: 250rpx;
  display: block;
}

.histroy-form {
  font-size: 14px;
  margin-top: 10rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.history-form-row {
  margin: 10rpx 0;
  display: flex;
}

.history-form-cell-time {
  flex: 2;
}

.history-form-cell-degree {
  text-align: center;
  flex: 1;
}

.history-form-cell-score {
  text-align: center;
  flex: 1;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(51, 51, 51, 0.6);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.examinationInfo {
  width: 520rpx;
  height: 800rpx;
  margin: 20rpx 0;
  padding: 40rpx;
  background-color: white;
  box-shadow: 0 4rpx 10rpx #aaaaaa;
  border-radius: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.examinationInfo-avatar {
  margin-top: 40rpx;
  height: 160rpx;
  width: 160rpx;
  background-color: rosybrown;
  border-radius: 80rpx;
}

.examinationInfo-score {
  margin-top: 40rpx;
  font-size: 32px;
  font-weight: 700;
}

.examinationInfo-banner {
  width: 85%;
  margin-top: 20rpx;
  padding-bottom: 12rpx;
  font-size: 12px;
  text-align: center;
  border-bottom: 5rpx #989898 dashed;
}

.examinationInfo-detail {
  width: 100%;
  padding: 0 40rpx;
}

.examinationInfo-item {
  margin: 15rpx 0;
  display: flex;
  align-items: center;
}

.examinationInfo-item-icon {
  width: 32rpx;
  height: 24rpx;
  margin-right: 10rpx;
  border-radius: 5rpx;
}

.examinationInfo-item-score {
  flex: 1;
  text-align: right;
}

.examinationInfo-sup {
  margin-top: 20rpx;
  font-size: 12px;
}

.examinationInfo-sup text {
  color: #aaaaaa;
}
