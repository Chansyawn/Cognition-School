<!--index.wxml-->
<van-popup show="{{ruleState}}" position="bottom"
           round close-on-click-overlay="{{false}}">
  <view class="popup-content">
    <view class="exam-rule-title">
      测试规则
    </view>
    <view>
      在尽可能短的时间内依次点击数字
    </view>
    <view class="exam-control">
      <van-button plain block type="primary" bind:tap="viewDemo">查看演示</van-button>
      <view style="width: 20rpx"></view>
      <van-button plain block type="primary" bind:tap="startExam">开始测试</van-button>
    </view>
  </view>
</van-popup>
<van-overlay show="{{startCountDownState}}" custom-style="background-color: transparent">
  <view class="wrapper">
    <view class="countdown">{{startCountDown}}</view>
  </view>
</van-overlay>
<van-overlay show="{{demoState}}" custom-style="background-color: transparent">
</van-overlay>
<van-notify id="van-notify" />
<van-toast id="van-toast"/>
<view class="page">
  <view class="main">
    <view class="target-now">{{flag + 1 <= 25 ? flag + 1 : 25}}</view>
    <view class="target-now-title">当前目标</view>
    <view class="game">
      <view class="row" wx:for="{{array}}" wx:for-item="row" wx:key="*this">
        <view class="cell {{num>=flag+1?'':'cell_clicked'}}" wx:for="{{row}}" wx:for-item="num" wx:key="*this"
              bindtap="tapNum" data-num="{{num}}">
          <view hidden="{{!examState}}">{{num}}</view>
        </view>
      </view>
    </view>
    <view class="timer">{{timeCount}}</view>
  </view>
</view>