/**index.wxss**/
page {
  background-color: #eeeeee;
}

.popup-content {
  padding: 40rpx;
}

.exam-rule-title {
  margin-bottom: 10rpx;
  color: #aaaaaa;
  font-size: 28rpx;
}

.exam-control {
  display: flex;
  margin-top: 40rpx;
  width: 100%;
}

.exam-control van-button{
  flex: 1;
}

.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.countdown {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 240rpx;
  height: 240rpx;
  border-radius: 10rpx;
  font-size: 96rpx;
  color: #ffffff;
  background-color: #000000;
  opacity: 0.7;
}

.main {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.target-now {
  font-size: 72rpx;
}

.target-now-title {
  margin: 20rpx 0;
  color: #bbbbbb;
}

.game {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 90%;
}

.cell {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 5rpx;
  text-align: center;
  font-size: 48rpx;
  background-color: #ffffff;
  transition: all 1s;
}

.cell:after {
  content: '';
  padding-top: 100%;
}

.cell_clicked {
  background-color: #aaa;
  color: #ffffff;
}

.row {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.timer {
  margin-top: 60rpx;
  color: #bbbbbb;
  font-weight: 500;
  font-size: 50rpx;
}
