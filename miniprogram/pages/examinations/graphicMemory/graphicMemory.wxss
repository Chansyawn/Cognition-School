
.exam-controller {
  padding: 20px;
}

.exam-rule > text:first-child {
  display: block;
  margin-bottom: 10px;
  color: #aaaaaa;
}

.exam-rule {
  margin-bottom: 10px;
}

.exam-control-container {
  display: flex;
  margin-bottom: 20px;
}

.exam-control-container > van-button {
  flex: 1;
}

.settlement-info {
  display: flex;
  justify-content: space-evenly;
}

.settlement-info > view {
  text-align: center;
}

.settlement-info > view > text {
  display: block;
  margin-bottom: 10px;
}

.settlement-info > view > text:first-child {
  color: #888888;
}

.settlement-info > view > text:last-child {
  font-size: 24px;
}

.ready {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120px;
  height: 120px;
  color: #fff;
  font-size: 48px;
  border-radius: 8px;
  background-color: rgba(0, 0, 0, .7) !important;
}

.page {
  background-color: #eeeeee;
}

.header{
  padding: 0 40rpx;
}

.info {
  display: flex;
}

.info > view {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  padding: 0 10px;
  font-size: 18px;
}

.life-tags {
  display: flex;
}

.life-tags:before {
  content: '生命:';
  display: flex;
  align-items: center;
  margin-right: 6px;
}

.info > van-image {
  align-self: center;
  width: 40%;
  height: 300rpx;
}

.progress {
  margin: 0 20rpx;
}

.main {
  padding: 0 40rpx;
}

.row {
  display: flex;
  justify-content: space-between;
  margin: 16px 0
}

.cell:before {
  content: '';
  padding-top: 90%;
}

.cell {
  position: relative;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 10rpx;
  border-radius: 16px;
  background-color: #cccccc;
}


.cell-content {
  position: relative;
  height: 90%;
  width: 80%;
  top: -12%;
  border-radius: 8px;
  color: white;
  text-align: center;
  background-color: #aaaaaa;
  transition: transform .5s ease-out;
}

.target-cell {
  background-color: #ffffff;
  transform: rotateX(180deg);
}

.other-cell {
  background-color: #666666;
  transform: rotateX(180deg);
}

.highlight {
  background-color: #ffcc00;
}
