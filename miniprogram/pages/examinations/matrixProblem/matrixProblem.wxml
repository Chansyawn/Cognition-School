<!--miniprogram/pages/examinations/matrixProblem/matrixProblem.wxml-->
<view class="page">
  <van-nav-bar title="矩阵问题" custom-style="background-color: transparent;" border="{{false}}"/>
  <view class="main">
    <view wx:for="{{3}}" wx:for-item="rowItem" wx:for-index="rowIdx" class="row" wx:key="rowIdx">
      <view wx:for="{{3}}" wx:for-item="cellItem" wx:for-index="cellIdx" class="cell" wx:key="cellItem"
            data-x="{{rowIdx}}" data-y="{{cellIdx}}" bind:tap="activeCell">
        <view class="cell-content {{cellItem.isActive?(cellItem.isTarget?'target-cell':'other-cell'):''}}">
        </view>
      </view>
    </view>
  </view>
</view>
