
Page {
  background-color: #eeeeee;
}

.btn{
  display: flex;
  flex-flow: row;
  align-items: center;
  justify-content: center;
  margin: 20rpx;
  width: 80%;
  height: 100rpx;
  background-color: #ffffff;
  box-shadow: 0 10rpx 0 #aaa, 0 10rpx 10rpx #aaa;
  transition: all .1s ease-in;
}

button[disabled]{
  color: #000!important;
  
}

.btn-active{
  display: flex;
  flex-flow: row;
  align-items: center;
  justify-content: center;
  margin: 20rpx;
  width: 80%;
  height: 100rpx;
  background-color: #dddddd!important;
  box-shadow: 0 5rpx 0 #aaa, 0 5rpx 5rpx #ccc;
 
}


.btn-tips{
  display: flex;
  flex-flow: row;
  align-items: center;
  justify-content: center;
  margin: 20rpx;
  width: 80%;
  height: 100rpx;
  background-color: #db5705!important;
  box-shadow: 0 10rpx 0 #db1f05, 0 10rpx 10rpx #aaa;
 
}



.out {margin-left:auto;margin-right:auto;width:600rpx;height:30rpx;border-radius:30rpx;overflow:hidden;
  box-shadow: 0 5rpx 0 #aaa, 0 5rpx 5rpx #ccc;}
.in {height:100%;background-color:skyblue;}
.in-red {height:100%;background-color:#db1f05;}

.title{
  font-size: 50rpx;
  margin: 30rpx;
}
.question{
  margin: 50rpx;
  font-size: 100rpx;
  font-weight: 800;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.questionq{
  font-size: 40rpx;
  margin: 60rpx 0;
}

.popup-content {
  padding: 40rpx;
}

.exam-rule-title {
  margin-bottom: 10rpx;
  color: #aaaaaa;
  font-size: 28rpx;
}

.exam-control {
  display: flex;
  margin-top: 40rpx;
  width: 100%;
}

.exam-control van-button{
  flex: 1;
}

.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.countdown {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 240rpx;
  height: 240rpx;
  border-radius: 10rpx;
  font-size: 96rpx;
  color: #ffffff;
  background-color: #000000;
  opacity: 0.7;
}
