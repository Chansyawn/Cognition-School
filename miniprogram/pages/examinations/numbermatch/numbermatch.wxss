Page {
  background-color: #eeeeee;
}

.popup-content {
  padding: 40rpx;
}

.exam-rule-title {
  margin-bottom: 10rpx;
  color: #aaaaaa;
  font-size: 28rpx;
}

.exam-control {
  display: flex;
  margin-top: 40rpx;
  width: 100%;
}

.exam-control van-button{
  flex: 1;
}

.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.countdown {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 240rpx;
  height: 240rpx;
  border-radius: 10rpx;
  font-size: 96rpx;
  color: #ffffff;
  background-color: #000000;
  opacity: 0.7;
}




/*标题*/
.title{
  font-size: 50rpx;
  margin: 30rpx;
}
/*题目*/
.question{
  margin: 50rpx;
  font-size: 100rpx;
  font-weight: 800;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/*表格内每一格*/
.numberText{
  font-weight:800;
  background-color: #ffffff;
  box-shadow: 0 10rpx 0 #aaa, 0 10rpx 10rpx #aaa;
  transition: all .1s ease-in;
  margin: 0rpx 7rpx;
  height: 75rpx;
  width: 125rpx;
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
  font-size: 35rpx; 
}
.numberText-active{
  font-weight:800;
  background-color: #dddddd;
  box-shadow: 0 5rpx 0 #aaa, 0 5rpx 5rpx #ccc;
  color: white;
  margin: 0rpx 7rpx;
  height: 75rpx;
  width: 125rpx;
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
  font-size: 35rpx; 
  transition: all .1s ease-in;
}

.numberText-tips{
  background-color: #db5705;
  box-shadow: 0 10rpx 0 #db1f05, 0 10rpx 10rpx #aaa;
  font-weight:800;
  transition: all .1s ease-in;
  margin: 0rpx 7rpx;
  height: 75rpx;
  width: 125rpx;
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
  font-size: 35rpx; 
}

/*表格-行*/
.tableLine{
  height: 75rpx;
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}