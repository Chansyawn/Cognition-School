/* pages/training/training.wxss */
.main {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx 120rpx;
}

.training-item {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 180rpx;
  margin: 20rpx;
  border-radius: 10rpx;
  box-shadow: 5rpx 5rpx 20rpx #cccccc;
}

.training-item > image {
  height: 100%;
  width: 150rpx;
}

.training-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 32rpx 16rpx;
}

.item-title {
  font-size: 36rpx;
  font-weight: 700;
}

.item-tags > text {
  border-radius: 6rpx;
  padding: 2rpx 8rpx;
  color: #ec6666;
  font-size: 24rpx;
  background-color: #f3eac2;
}

.training-score {
  display: flex;
  align-items: center;
  padding: 48rpx;
  font-size: 48rpx;
}
