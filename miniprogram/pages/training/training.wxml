<!--pages/training/training.wxml-->
<view class="page">
  <van-image height="100%" width="100%" fit="cover"
             src="cloud://cognition-school-3f9w80x22b0d491.636f-cognition-school-3f9w80x22b0d491-1304404556/assets/images/training_back.jfif">
  </van-image>
  <van-nav-bar custom-class="nav-bar" title-class="nav-bar" title="шонч╗Г" fixed="{{true}}" placeholder="{{true}}"
               border="{{false}}"/>
  <scroll-view class="main" scroll-y="{{true}}" >
    <block wx:for="{{examinations}}" wx:key="id">
      <view class="training-item">
        <image src="{{'cloud://cognition-school-3f9w80x22b0d491.636f-cognition-school-3f9w80x22b0d491-1304404556/assets/images/'+ item.image}}"
               mode="heightFix"></image>
        <view class="training-info">
          <text class="item-title">{{item.name}}</text>
          <view class="item-tags">
            <text>{{item.tag}}</text>
          </view>
        </view>
        <view class="training-score">{{item.score}}</view>
      </view>
    </block>
  </scroll-view>
  <custom-tab-bar custom-class="custom-tab-bar"></custom-tab-bar>
</view>
