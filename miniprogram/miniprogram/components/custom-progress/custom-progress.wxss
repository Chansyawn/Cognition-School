.progress {
  position: relative;
  display: flex;
  align-items: center;
  height: 80rpx;
}

.progress:after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  height: 30rpx;
  border: 4rpx solid #333333;
  border-radius: 10rpx;
  background-color: #ffffff;
}

.progress-content {
  height: 30rpx;
  border: 4rpx solid #333333;
  border-radius: 10rpx;
  background-color: wheat;
  z-index: 10;
}

.progress-arrow {
  position: absolute;
  transform: translate(-50%);
  height: 80rpx;
  width: 10%;
  z-index: 20;
}

