.progress {
  position: relative;
  display: flex;
  align-items: center;
  height: 80rpx;
}

.progress:after {
  content: '';
  position: absolute;
  box-sizing: border-box;
  width: 100%;
  height: 38rpx;
  border: 2px solid #333333;
  border-radius: 10rpx;
  background-color: #ffffff;
}

.progress-content {
  height: 30rpx;
  border: 2px solid #333333;
  border-radius: 10rpx;
  background-color: wheat;
  z-index: 10;
}

.progress-arrow {
  position: absolute;
  transform: translate(-50%);
  height: 80rpx;
  width: 10%;
  z-index: 20;
}

