<!--components/custom-nav-bar/custom-nav-bar.wxml-->
<view class="custom-nav-bar">
  <view class="status-bar" style="height: {{statusBarHeight}}px;"></view>
  <view class="nav-bar" style="height: {{navBarHeight}}px;">
    <view wx:if="{{navigateBackArea}}" bind:tap="navigateBack">
      <view class="return-button">
        <iconfont name="arrow-left-bold" size="40"></iconfont>
        <text>返回</text>
      </view>
    </view>
    <view wx:else></view>
    <slot></slot>
    <view></view>
  </view>
</view>
